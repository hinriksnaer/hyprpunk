/* Ristretto Theme for Rofi */

* {
    bg-col:              #2c2525;
    bg-col-light:        #403e41;
    border-col:          #f9cc6c;
    selected-col:        #403e41;
    blue:                #85dacc;
    fg-col:              #e6d9db;
    fg-col2:             #ff8297;
    grey:                #72696a;

    background-color:    transparent;
    text-color:          @fg-col;
    font:                "JetBrainsMono Nerd Font 12";
}

window {
    height:              460px;
    width:               600px;
    border:              2px;
    border-color:        @border-col;
    background-color:    @bg-col;
    border-radius:       8px;
}

mainbox { background-color: @bg-col; }

inputbar {
    children:            [prompt, entry];
    background-color:    @bg-col;
    border-radius:       5px;
    padding:             2px;
}

prompt {
    background-color:    @blue;
    padding:             8px 12px;
    text-color:          @bg-col;
    border-radius:       4px;
    margin:              20px 0px 0px 20px;
}

entry {
    padding:             8px 12px;
    margin:              20px 0px 0px 10px;
    text-color:          @fg-col;
    background-color:    @bg-col;
}

listview {
    border:              0px;
    padding:             6px 0px 0px;
    margin:              10px 0px 0px 20px;
    columns:             1;
    lines:               8;
    background-color:    @bg-col;
}

element {
    padding:             8px;
    background-color:    @bg-col;
    text-color:          @fg-col;
    border-radius:       4px;
}

element-icon { size: 25px; }

element selected {
    background-color:    @selected-col;
    text-color:          @fg-col2;
}

element-text, element-icon {
    background-color:    inherit;
    text-color:          inherit;
}

mode-switcher {
    spacing:             0;
    background-color:    transparent;
}

button {
    padding:             10px;
    background-color:    @bg-col-light;
    text-color:          @grey;
    vertical-align:      0.5;
    horizontal-align:    0.5;
}

button selected {
    background-color:    @bg-col;
    text-color:          @blue;
}

message {
    background-color:    @bg-col-light;
    margin:              2px;
    padding:             2px;
    border-radius:       5px;
}

textbox {
    padding:             6px;
    margin:              20px 0px 0px 20px;
    text-color:          @blue;
    background-color:    @bg-col-light;
}
